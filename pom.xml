<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>jp.mapserver2007.jtmap.api</groupId>
  <artifactId>jtmap_core</artifactId>
  <packaging>jar</packaging>
  <version>0.0.3-SNAPSHOT</version>
  <name>jtmap_core</name>
  <url>http://maven.apache.org</url>
  <build>
  	<plugins>
  		<plugin>
  			<artifactId>maven-assembly-plugin</artifactId>
  			<version>2.2-beta-1</version>
  			<configuration>
			  <descriptorRefs>
	            <descriptorRef>jar-with-dependencies</descriptorRef>
	          </descriptorRefs>
  			</configuration>
  		</plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-javadoc-plugin</artifactId>
			<configuration>
				<encoding>UTF-8</encoding>
				<docencoding>UTF-8</docencoding>
				<charset>UTF-8</charset>
				<bottom><![CDATA[Copyright &copy; 2004-2009 summer-lights All Rights Reserved]]></bottom>
			</configuration>
		</plugin>
	</plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
	<dependency>
	  <groupId>commons-httpclient</groupId>
	  <artifactId>commons-httpclient</artifactId>
	  <version>3.1</version>
	</dependency>
	<dependency>
		<groupId>jakarta.oro</groupId>
		<artifactId>jakarta-oro</artifactId>
		<version>2.0.8</version>
	</dependency>
	<dependency>
	  <groupId>xerces</groupId>
	  <artifactId>xmlParserAPIs</artifactId>
	  <version>2.6.2</version>
	</dependency>
	<dependency>
	  <groupId>xerces</groupId>
	  <artifactId>xercesImpl</artifactId>
	  <version>2.8.1</version>
	</dependency>
	<dependency>
	  <groupId>nekohtml</groupId>
	  <artifactId>nekohtml</artifactId>
	  <version>0.9.4</version>
	</dependency>
	<dependency>
		<groupId>net.arnx</groupId>
		<artifactId>jsonic</artifactId>
		<version>1.1.1</version>
	</dependency>
	<dependency>
		<groupId>org.mozilla.universalchardet</groupId>
		<artifactId>universalchardet</artifactId>
		<version>1.0.3</version>
	</dependency>
	<dependency>
		<groupId>tomcat</groupId>
		<artifactId>servlet-api</artifactId>
		<version>5.5.15</version>
	</dependency>
	<dependency>
		<groupId>commons-lang</groupId>
		<artifactId>commons-lang</artifactId>
		<version>2.4</version>
	</dependency>
	<dependency>
	  <groupId>mysql</groupId>
	  <artifactId>mysql-connector-java</artifactId>
	  <version>5.0.5</version>
	</dependency>
	<dependency>
		<groupId>net.java.ao</groupId>
		<artifactId>activeobjects</artifactId>
		<version>0.8.2</version>
	</dependency>
  </dependencies>
</project>
